<%= form_with model: [post, new_comment] do |form| %>
      <div class="mb-3">
        <%= form.label :content, "Your Comment", class: "form-label" %>
        <%= form.rich_text_area :content, class: "form-control", rows: 4, placeholder: "Write your comment here..." %>
      </div>
      <%= form.submit class: "btn btn-primary" %>
<% end %>